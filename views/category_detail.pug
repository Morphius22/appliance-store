extends layout

block content
  h1.ml-6= title
  .flex.flex-row.flex-wrap
    each item in itemsInCategory
      console.log(item)
      .card.card-compact.w-96.bg-base-100.shadow-xl.m-8
        figure
          img(src='/images/refrigerator.webp' alt='Refrigerator')
        .card-body
          h2.card-title #{item.name}
          p.badge.badge-secondary Category: #{item.category.name} 
          p.badge Number Available: #{item.stock}
          p #{item.description} 
          .card-actions.justify-start
            a(href=item.url)
                button.btn.btn-primary $#{item.price}