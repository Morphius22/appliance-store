extends layout

block content
  h1=title

  form.flex.justify-center(method='POST' action='')
    .form-control.w-full.max-w-xs
        label.label
            span.label-text Category Name
        input#title.input.input-bordered.w-full.max-w-xs.mb-5(type='text' placeholder='Type here' name="title" value =(null === category ? '' : category.name))
        label.label
            span.label-text Category Description
        input#description.input.input-bordered.w-full.max-w-xs.mb-5(type='text' placeholder='Type here' name="description" value =(null === category ? '' : category.description))
        button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg


